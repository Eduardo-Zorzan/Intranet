<%- include('./includes/header.ejs') %> 
    <div id="opacity"></div>
    <div class="container-table">
        <table>
            <tbody>
                <input type="hidden" name="dataFromDB" value="<%=dataFromDB%>"  class="data-from-db" >
                <tr class="titles">
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Cartão do SUS</th>
                    <th>Data de Nascimento</th>
                    <th>Observações</th>
                </tr>
            </tbody>
        </table>
    </div>
    <button class="new-patient">
        <h3><a href="./assets/html/newPatient.html" class="new-patient">Novo Paciente</a></h3>
    </button>
    <input type="hidden" name="_csrf" value="<%=csrfToken%>" class="csrf">
    <div class="new-patient-screen"></div>
    <div class="details-patient-screen">
        <div class="main-container-details">
            <div class="close-container-details">
                    <button class="close-details">✖</button>
            </div>
            <input type="hidden" class="patientID" value="<%=patientID%>">
            <form action="/detailsPatient<%=patientID%>." method="post" class="details-form">
                <div class="input-details-container">
                    <input type="hidden" name="_csrf" value="<%=csrfToken%>" class="csrf">
                    <label for="name">Nome</label>
                    <input type="text" id="name" name="name" value="<%=name%>">
                    <label for="cpf">CPF</label>
                    <input type="number" id="cpf" placeholder="000.000.000.00" name="cpf" value="<%=cpf%>">
                    <label for="sus">SUS</label>
                    <input type="number" id="sus" name="sus" value="<%=sus%>" maxlength="15">
                    <label for="birth">Data de Nascimento</label>
                    <input type="date" id="birth" name="birth" value="<%=birth%>">
                    <label for="obs">Observações</label>
                    <input type="text" id="obs" name="obs" value="<%=obs%>">
                    <input type="hidden" name="buttonHidden" class="button-hidden">
                </div>
                <div class="button-details-form">
                    <button type="submit" class="submit-details">Atualizar dados</button>
                    <button type="submit" class="del-details">Deletar Paciente</button>
                </div>
            </form>
            <input type="hidden" value="<%=listBlank%>" class="listBlank">
            <input type="hidden"  value="<%=cpfError%>" class="cpfError">
        </div>        
    </div>
<%- include('./includes/footer.ejs') %>
