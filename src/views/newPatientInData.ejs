<%- include('./includes/header.ejs') %> 
    <div id="opacity"></div>
    <div class="container-table">
        <table>
            <tbody>
                <input type="hidden" name="_csrf" value="<%=csrfToken%>" class="csrf">
                <input type="hidden" name="dataFromDB" value="<%=dataFromDB%>"  class="data-from-db" >
                <tr class="titles">
                    <th>Nome</th>
                    <th>CPF</th>
                    <th>Cartão do SUS</th>
                    <th>Data de Nascimento</th>
                    <th>Observações</th>
                </tr>
            </tbody>
        </table>
    </div>
    <button class="new-patient">
    <h3><a href="./assets/html/newPatient.html" class="new-patient">Novo Paciente</a></h3>
    </button>
    <div class="new-patient-screen">
        <div class="main-container">
            <div class="close-container">
                <button class="close">✖</button>
            </div>
            <input type="hidden" value="<%=listBlank%>" class="listBlank" name="listBlank">
            <input type="hidden" value="<%=cpfError%>" class="cpfError" name="cpfError">
            <form class="newPatient-form" action="/data" method="post">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>" class="csrf">
                <label for="name">Nome</label>
                <input type="text" id="name" name="name" value="<%=name%>">
                <label for="cpf">CPF</label>
                <input type="number" id="cpf" placeholder="000.000.000.00" name="cpf" value="<%=cpf%>">
                <label for="sus">SUS</label>
                <input type="number" id="sus" name="sus" value="<%=sus%>" maxlength="15">
                <label for="birth">Data de Nascimento</label>
                <input type="date" id="birth" name="birth" value="<%=birth%>">
                <label for="obs">Observações</label>
                <input type="text" id="obs" name="obs" value="<%=obs%>">
                <button type="submit" class="submit">Adicionar</button>
            </form>
        </div>        
    </div>
<%- include('./includes/footer.ejs') %>
