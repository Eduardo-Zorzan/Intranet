<%- include('./includes/header.ejs') %> 
<div id="opacity-consultation"></div>
<input type="hidden" value="<%=dateFromServer%>" id="dateFromServer">
<input type="hidden" value="<%=consultationsFinished%>" id="consultations-finished">
<input type="hidden" value="<%=consultationsNotFinished%>" id="consultations-not-finished">
<div class="calendar-background">
    <div class="calendar-grid"></div>
    <div class="display-month">
        <h1></h1>
    </div>
    <form action="/calendar" method="post">
        <input type="hidden" name="_csrf" value="<%=csrfToken%>" class="csrf">
        <input type="hidden" name="actualDate" value="" id="actualDate">
        <input type="hidden" name="statusButtons" value="" id="statusButtons">
        <button type="submit" id="previous">ANTERIOR</button>
        <button type="submit" id="next">PRÓXIMO</button>
    </form>
</div>
<div id="consultation-screen">
    <div class="consultation">
        <div class="close-container-consultation">
            <button class="close-consultation">✖</button>
        </div>
        <div class="display-date">
            <h1><%=actualDay%></h1>
        </div>
        <div class="container-form-consultation">
            <form action="/detailsDay<%=actualDay%>." method="post" class="consultation-form">
                <input type="hidden" name="_csrf" value="<%=csrfToken%>" class="csrf">
                <div class="container-input">
                    <label for="patient">Nome do Paciente:</label>
                    <input type="text" id="patient" name="patient" placeholder="Nome completo do paciente">
                </div>
                <div class="container-input">
                    <label for="time-consultation">Horário da consulta</label>
                    <select name="timeConsultation" id="time-consultation">
                        <optgroup label="Horários">
                        </optgroup>
                    </select>
                </div>
                <button type="submit">Agendar Consulta</button>
            </form>
        </div>
        <div class="container-scheduled">
            <input type="hidden" id="consultationsFromServer" value="<%=consultationsFromServer%>">
            <input type="hidden" id="list-error" value="<%=listError%>">
            <h1>Consultas Agendadas:</h1>
            <ul>
                
            </ul>
        </div>
    </div>
</div>
<%- include('./includes/footer.ejs') %>
